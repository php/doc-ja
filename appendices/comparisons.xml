      <entry>&true;</entry>
      <entry>&false;</entry>
      <entry>&false;</entry>
     </row>
     <row>
      <entry><literal>$x = array();</literal></entry>
      <entry><type>array</type></entry>
      <entry>&true;</entry>
      <entry>&false;</entry>
      <entry>&true;</entry>
      <entry>&false;</entry>
     </row>
     <row>
