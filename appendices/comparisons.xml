     </row>
     <row>
      <entry><literal>$x = "php";</literal></entry>
      <entry><type>string</type></entry>
      <entry>&false;</entry>
      <entry>&false;</entry>
      <entry>&true;</entry>
      <entry>&true;</entry>
     </row>
     <row>
