 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>strspn</function> の例</title>
    <programlisting role="php">
<![CDATA[
<?php
echo strspn("foo", "o", 1, 2); // 出力は 2
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

