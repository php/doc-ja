 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>htmlentities</function> の例</title>
    <programlisting role="php">
<![CDATA[
<?php
$str = "A 'quote' is <b>bold</b>";

// 出力: A 'quote' is &lt;b&gt;bold&lt;/b&gt;
echo htmlentities($str);

// 出力: A &#039;quote&#039; is &lt;b&gt;bold&lt;/b&gt;
echo htmlentities($str, ENT_QUOTES);
?>
]]>
    </programlisting>
   </example>
  </para>
  
  <para>
   <example>
    <title><constant>ENT_IGNORE</constant> の使用例</title>
    <programlisting role="php">
<![CDATA[
<?php
$str = "\x8F!!!";

// 出力: 空の文字列
echo htmlspecialchars("\x8F!!!", ENT_QUOTES, "UTF-8");

// 出力: "!!!"
echo htmlspecialchars("\x8F!!!", ENT_QUOTES | ENT_IGNORE, "UTF-8");
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

