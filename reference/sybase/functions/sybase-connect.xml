 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title><function>sybase_connect</function> の例</title>
    <programlisting role="php">
<![CDATA[
<?php
$link = sybase_connect('SYBASE', '', '')
        or die("接続できません !");
echo "接続に成功しました";
sybase_close($link);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

