     <constant>POSIX_S_IFIFO</constant>
     (<type>int</type>)
    </term>
    <listitem>
     <simpara>
      FIFO (名前つきパイプ) スペシャルファイル。
     </simpara>
    </listitem>
   </varlistentry>
   <varlistentry xml:id="constant.posix-s-ifreg">
