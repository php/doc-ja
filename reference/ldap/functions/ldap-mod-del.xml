   <simplelist>
    <member><function>ldap_mod_del_ext</function></member>
    <member><function>ldap_mod_add</function></member>
    <member><function>ldap_mod_replace</function></member>
    <member><function>ldap_modify_batch</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

